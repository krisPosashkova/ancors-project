.navigation {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid;
    &__list {
        display: flex;
        text-transform: uppercase;
        gap: 36px;
        margin: 19px 0 17px;
    }
    &__list-item:hover {
        opacity: 0.7;
        transition: 0.4s;
    }
    &__list-item:active {
        opacity: 0.3;
        transition: 0.4s;
    }
    &__item {
        font-family: 'Inter', sans-serif;
        font-weight: 500;
        font-size: 34px;
        line-height: 24px;
        position: absolute;
        margin-top: 18px;
        left: 50%;
        top: 19px;
        border: 1px solid;
        border-bottom: transparent;
        border-radius: 15px 15px 0 0;
        background-color: #000;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        cursor: pointer;
        padding: 12px 22px 13px 22px;
    }
}


