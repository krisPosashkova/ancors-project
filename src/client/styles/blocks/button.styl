.button 
  padding: 18px 32px
  color: $color-dark
  background-color: $color-base
  border-radius: 0px 20px 20px 32px
  text-transform: uppercase
  font(16px, 20px, 700)
  border: 1px solid #FFFFFF
  cursor: pointer

  &:hover 
    opacity: 0.7
    transition: 0.4s
  
  &:active 
    opacity: 0.3
    transition: 0.4s
  



