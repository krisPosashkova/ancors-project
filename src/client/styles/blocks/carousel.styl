.carousel {
    position: absolute;
    transform: translate(-50%, -50%);
    left: 50%;
    &__wrapper {
        position: relative;  
        display:flex;
        justify-content: space-between;
        width: 162px;
    }

    &__btn {
        color: #FFFFFF;
        padding: 12px 22px;
        background-color: #000000;
        width: 50%;
        margin: auto;
        border: 0.5px solid #FFFFFF;
    }

    &__btn-back {
        border-radius: 30px 0 0 30px;
    }

    &__btn-next {
        border-radius: 0 30px 30px 0;
    }

    &__back-icon {
        float: left;
        height: 18px;
    }

    &__next-icon {
        float: right;
        height: 18px;
    }

    &__btn-stop {
        position: absolute;
        padding: 19px;
        border-radius: 100%;
        border: 0.5px solid #FFFFFF;
        background-color: #000000;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
    }

    &__stop-icon {
        display: block;
        height: 16px;
        transform: rotate(45deg);
    }
}